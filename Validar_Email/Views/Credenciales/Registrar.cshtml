@model Validar_Email.Models.Credenciales

@{
    ViewData["Title"] = "REGISTRAR";
}

<style>
    /* Estilos Para Cuadro */
    .form-container {
        max-width: 550px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>

<!-- CUERPO HTML -->
<div class="form-container">
    <h1>Registro</h1><br />

    <h5>Datos De Credenciales</h5>
    <hr />

    <form asp-action="Registrar_Credencial">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <!-- FILA #1 -->
        <div class="row">

            <div class="form-group col-md-7">
                <label class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label class="control-label">Password:</label>
                <input type="number" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

        </div>

        <!-- BOTONES -->
        <div class="row">

            <div class="form-group">
                <input type="submit" value="GUARDAR" class="btn btn-primary" /> |
                <a asp-action="Pagina_Inicio" class="btn btn-secondary">CANCELAR</a>
            </div>

        </div>

    </form>

</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}